<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_padding_16dp"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/rv_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/contact_image"
        android:background="@drawable/image_drawable"
        android:padding="10dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/rv_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_18sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/dimen_margin_start_20dp"
        android:layout_marginTop="@dimen/dimen_margin_top_5dp"
        android:text="Aaron Ramsey"
        />
        <TextView
            android:id="@+id/rv_number"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/dimen_18sp"
            android:layout_marginStart="@dimen/dimen_margin_start_20dp"
            android:layout_marginTop="@dimen/dimen_margin_top_5dp"
            android:text="574747452"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/call"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/dimen_margin_top_10dp"
        android:layout_marginEnd="@dimen/dimen_margin_end_10dp"
        />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/message"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/dimen_margin_top_10dp"
            android:layout_marginEnd="@dimen/dimen_margin_end_10dp"
            />
</LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/rv_view_color"
        android:layout_marginTop="@dimen/dimen_margin_top_10dp"

        />

</LinearLayout>